{
  "name": "claude-auto-open",
  "displayName": "Claude Auto Open",
  "description": "Automatically opens Claude Code in a terminal when a workspace is opened",
  "version": "1.0.0",
  "author": "Dan Hopkins",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/danhopkins/claude-auto-open-extension"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Claude Auto Open",
      "properties": {
        "claudeAutoOpen.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic opening of Claude Code terminal on startup"
        }
      }
    }
  }
}
